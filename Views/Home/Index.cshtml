@using QLMB.Models
@model  QLMB.Controllers.ViewModel
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_HomePage.cshtml";
    int sukien = 0;
    int uudai = 0;
    int matbang = 0;
}

<!-- Link Boostrap-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<!-- Link CSS -->
<link rel="stylesheet" href="~/Resources/CSS/MainMenu_User.css" />
<link rel="stylesheet" href="~/Resources/CSS/MultipleItem_Carousel.css" />

<!--Carousel trang chủ-->
<div id="carousel">
    @*Banner*@
    <div id="Banner" class="carousel slide carousel-fade text-lg-center" data-bs-ride="carousel">
        @*Indicator*@
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#Banner" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#Banner" data-bs-slide-to="1" aria-label="Slide 2"></button>
        </div>
        @*Source Hình*@
        <div id="Banner" class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="3000">
                <img src="~/Resources/Picture/Banner/Banner1.png" class="d-block w-100 h-450" alt="...">
            </div>
            <div id="Banner" class="carousel-item" data-bs-interval="3000">
                <img src="~/Resources/Picture/Banner/Banner2.png" class="d-block w-100" alt="...">
            </div>
        </div>
        @*Nút qua trái*@
        <button class="carousel-control-prev" type="button" data-bs-target="#Banner" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        @*Nút qua phải*@
        <button class="carousel-control-next" type="button" data-bs-target="#Banner" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!--Carousel trang chủ-->

<div class="container-fluid Item">
    <!--Carousel Mặt bằng-->
    <h2 class="mt-4">MẶT BẰNG</h2>
    <div id="matBang" class="carousel" data-bs-ride="carousel">
        <div class="carousel-inner">
            @foreach (MatBang matBang in Model.IE_MBList)
            {
                if (sukien == 0)
                {
                    <div class="carousel-item active">
                        <div class="card" style="width: 25rem; height: 570px;">
                            <div class="img-wrapper">
                                <img class="card-img-top" src="~/Resources/Picture/Property/@matBang.HinhMB">
                            </div>
                            <div class="card-body">
                                <h6 class="card-text">Lầu: @matBang.Lau</h6>
                                <h6 class="card-text">Khu: @matBang.Khu</h6>
                                <h6 class="card-text">Diện tích: @matBang.DienTich m<sup>2</sup></h6>
                                <h6 class="card-text">Trạng thái: @matBang.TinhTrang.TenTT</h6>
                                <h5 class="card-title text-danger fw-bold">@string.Format($"{matBang.TienThue:0,0} đ")</h5>
                                <div class="mt-2 mb-2 text-center">
                                    <a href="@Url.Action("Index", "Payment", new { id=matBang.MaMB })" class="btn btn-success text-center">Thanh toán right meow</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <div class="card" style="width: 25rem; height: 570px;">
                            <div class="img-wrapper">
                                <img class="card-img-top" src="~/Resources/Picture/Property/@matBang.HinhMB">
                            </div>
                            <div class="card-body">
                                <h6 class="card-text">Lầu: @matBang.Lau</h6>
                                <h6 class="card-text">Khu: @matBang.Khu</h6>
                                <h6 class="card-text">Diện tích: @matBang.DienTich m<sup>2</sup></h6>
                                <h6 class="card-text">Trạng thái: @matBang.TinhTrang.TenTT</h6>
                                <h5 class="card-title text-danger fw-bold">@string.Format($"{matBang.TienThue:0,0} đ")</h5>
                                <div class="mt-2 mb-2 text-center">
                                    <a href="@Url.Action("Index", "Payment", new { id=matBang.MaMB })" class="btn btn-success text-center">Thanh toán right meow</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                matbang++;
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#matBang" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#matBang" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!--Carousel Mặt bằng-->

    <!--Carousel Sự kiện-->
    <h2 class="mt-4">SỰ KIỆN</h2>
    <div id="SuKien" class="carousel" data-bs-ride="carousel">
        <div class="carousel-inner">
            @foreach (SuKienUuDai pro in Model.IE_SKUDList.Where(s => s.MaDM.ToString().Trim() == "SK"))
            {
                if (sukien == 0)
                {
                    <div class="carousel-item active">
                        <div class="card" style="width: 25rem; height: 570px;">
                            <div class="img-wrapper">
                                <a href="@Url.Action("EventDetail/"+ pro.MaDon,"Home")"><img class="card-img-top" src="@Url.Content(pro.HinhBia)"></a>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title"><a href="@Url.Action("EventDetail/"+ pro.MaDon,"Home")" class="text-black text-decoration-none">@Html.DisplayFor(model => pro.TieuDe)</a></h5>
                                <p class="card-text">@Html.DisplayFor(model => pro.MoTa)</p>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <div class="card" style="width: 25rem; height: 570px;">
                            <div class="img-wrapper">
                                <a href="@Url.Action("EventDetail/"+ pro.MaDon,"Home")"><img class="card-img-top" src="@Url.Content(pro.HinhBia)"></a>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title"><a href="@Url.Action("EventDetail/"+ pro.MaDon,"Home")" class="text-black text-decoration-none">@Html.DisplayFor(model => pro.TieuDe)</a></h5>
                                <p class="card-text">@Html.DisplayFor(model => pro.MoTa)</p>
                            </div>
                        </div>
                    </div>
                }
                sukien++;
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#SuKien" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#SuKien" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!--Carousel Sự kiện-->

    <!--Carousel Ưu đãi-->
    <h2 class="mt-4">ƯU  ĐÃI</h2>
    <div id="carouselExampleControls" class="carousel" data-bs-ride="carousel">
        <div class="carousel-inner">
            @foreach (SuKienUuDai pro in Model.IE_SKUDList.Where(s => s.MaDM.ToString().Trim() == "UD"))
            {
                if (uudai == 0)
                {
                    <div class="carousel-item active">
                        <div class="card" style="width: 25rem; height: 570px;">
                            <div class="img-wrapper">
                                <img class="card-img-top" src="@Url.Content(pro.HinhBia)">
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(model => pro.TieuDe)</h5>
                                <p class="card-text">@Html.DisplayFor(model => pro.MoTa)</p>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <div class="card" style="width: 25rem; height:570px;">
                            <div class="img-wrapper">
                                <img class="card-img-top" src="@Url.Content(pro.HinhBia)">
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(model => pro.TieuDe)</h5>
                                <p class="card-text">@Html.DisplayFor(model => pro.MoTa)</p>
                            </div>
                        </div>
                    </div>
                }
                uudai++;
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!--Carousel Ưu đãi-->
</div>

<script src="~/Scripts/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
<script src="~/Resources/JavaScript/multipleItemCarousel.js"></script>