@model QLMB.Models.MatBang
@{
    ViewBag.Title = "Chỉnh sửa mặt bằng";
    Layout = "~/Views/Shared/_Manager.cshtml";
}

@Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-outline-warning m-2" })
<section class="mt-3 mb-3">
    <div class="container">
        <div class="col">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h2 class="mt-3 mb-3">Chỉnh sửa mặt bằng</h2>
                    @using (Html.BeginForm("Edit", "Property", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div>
                                <label for="MaMB" class="m-2">Mã mặt bằng</label>
                                <div>
                                    <div hidden>
                                        @Html.EditorFor(model => model.MaMB, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <input type="text" value="@Model.MaMB" class="form-control" disabled />
                                    @Html.ValidationMessageFor(model => model.MaMB, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div>
                                <label for="Lau" class="m-2">Lầu</label>
                                <div>
                                    @Html.EditorFor(model => model.Lau, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Lau, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div>
                                <label for="DienTich" class="m-2">Diện tích</label>
                                <div>
                                    @Html.EditorFor(model => model.DienTich, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DienTich, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div>
                                <label for="Khu" class="m-2">Khu</label>
                                <div>
                                    @Html.EditorFor(model => model.Khu, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Khu, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div>
                                <label for="TienThue" class="m-2">Tiền thuê</label>
                                <div>
                                    @Html.EditorFor(model => model.TienThue, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TienThue, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div>
                                <label for="MATT" class="m-2">Trạng thái</label>
                                <div>
                                    @Html.DropDownList("MATT", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.MATT, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div hidden>
                                @Html.EditorFor(model => model.HinhMB)
                            </div>
                            <div>
                                <label for="HinhMB" class="m-2">Ảnh mặt bằng</label>
                                <div>
                                    <input type="file" name="UploadImage" class="form-control" />
                                </div>
                            </div>
                            <div>
                                <div class="mt-4 mb-3">
                                    <input type="submit" value="Lưu trạng thái" class="btn btn-outline-primary" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>
</section>