@model IEnumerable<QLMB.Models.MatBang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Manager.cshtml";
}

<h2 class="mt-1 mb-1">Quản lý mặt bằng</h2>
<div class="mt-3 mb-3">
    @Html.ActionLink("Thêm mặt bằng", "Create", null, new { @class="btn btn-primary" })
</div>
<table class="table">
    <tr>
        <th>
            Mã <br />Mặt bằng
        </th>
        <th>
            Lầu
        </th>
        <th>
            Diện tích
        </th>
        <th>
            Khu
        </th>
        <th>
            Tiền thuê
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Hành động
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaMB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienTich) m<sup>2</sup>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Khu)
        </td>
        <td>
            @String.Format($"{item.TienThue:0,0} VNĐ")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TinhTrang.TenTT)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaMB }, new { @class="btn btn-outline-warning" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaMB }, new { @class = "btn btn-outline-success" }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.MaMB }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
